<h1>Available Services</h1>

<table class="table table-bordered text-center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Availability</th>
      <th>Seller Name</th>
      <th colspan='1'>Action</th>
      
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.availability %></td>
        <td><%= generate_name(service.admin_users.pluck(:name)) %></td>
        <td><%= link_to 'Show', available_service_path(service) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Availed Services', availed_services_path ,  class: "btn btn-success text-white"%>