<h1>Edit Booking</h1>

<%= form_with(model: [ @service, @booking] , local: true) do |form| %>
  <div class = "form-group">
    <%= form.label :address %><br>
    <%= form.text_field :address , class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= form.label :contact %><br>
    <%= form.text_field :contact , class: "form-control" %>
  </div>
   <div class = "form-group">
    <%= form.label :time %><br>
    <%= form.datetime_local_field :time ,  class: "form-control" %>
  </div>
   <%= form.hidden_field :admin_user_id, value: current_admin_user.id%>
  <p>
    <%= form.submit  class: "btn btn-success" %>
  </p>
<% end %>

<%= link_to 'Back', service_path(@service) , class: "btn btn-secondary text-white" %>